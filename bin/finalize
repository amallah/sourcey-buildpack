#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
INDEX=$4

## show the environment we are building in
SOURCEY=sourcey
BUILD_DIR=$1
CACHE_DIR=$2
APP_DIR=$(basename $BUILD_DIR)
PREFIX=$HOME/$APP_DIR/$SOURCEY
START_DIR=`pwd`
BUILDPACK_DIR=$(dirname `dirname $0`)

WORK_DIR=$HOME/tmp/$SOURCEY.$$


chmod 755 $BUILD_DIR/SourceyStart.sh

cd $HOME
rm -rf $WORK_DIR